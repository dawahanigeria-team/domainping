# Backend Environment Variables
# Copy this file to .env and customize the values

# Database Configuration
DATABASE_URL=sqlite:///./domains.db
# For SQLite Cloud: DATABASE_URL=sqlitecloud://your-host.sqlite.cloud:8860/your-database?apikey=your-api-key

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Frontend URLs for CORS
FRONTEND_URL=http://localhost:3000
CLOUDFRONT_URL=https://dlzn4ikotqjx.cloudfront.net

# Domain Checking Configuration
CHECK_INTERVAL_HOURS=24
DEFAULT_REMINDER_DAYS=90,30,14,7,3,1
WHOIS_TIMEOUT=10
WHOIS_RETRY_COUNT=3

# Notification Configuration
NOTIFICATION_TIME_HOUR=9
NOTIFICATION_TIME_MINUTE=0

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# SMS Configuration (optional - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30 